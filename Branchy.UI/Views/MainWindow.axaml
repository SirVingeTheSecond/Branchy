<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Branchy.UI.ViewModels"
        x:Name="Root"
        x:Class="Branchy.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        mc:Ignorable="d"
        Width="1200"
        Height="720"
        Background="{StaticResource Surface0Brush}"
        Title="Branchy">

  <Grid RowDefinitions="Auto,*" Margin="10">
    <!-- Top toolbar -->
    <Border Background="{StaticResource Surface1Brush}"
            CornerRadius="{StaticResource PanelCornerRadius}"
            BorderBrush="{StaticResource OutlineSubtleBrush}"
            BorderThickness="1"
            Padding="8,6"
            Margin="0,0,0,8">
      <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Repository"
                     VerticalAlignment="Center"
                     Foreground="{StaticResource TextSecondaryBrush}" />
          <TextBox Width="420"
                   Text="{Binding RepositoryPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
          <Button Content="Browse"
                  Command="{Binding BrowseRepositoryCommand}" />
          <Button Content="Reload"
                  Command="{Binding ReloadStatusCommand}" />
        </StackPanel>

        <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="16">
          <TextBlock Text="{Binding BranchDisplay}"
                     VerticalAlignment="Center"
                     Foreground="{StaticResource TextSecondaryBrush}" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- Main body -->
    <Grid Grid.Row="1"
          ColumnDefinitions="260,*"
          ColumnSpacing="10">
      <!-- Left tool panel: Changes -->
      <Border Background="{StaticResource Surface1Brush}"
              CornerRadius="{StaticResource PanelCornerRadius}"
              BorderBrush="{StaticResource OutlineSubtleBrush}"
              BorderThickness="1"
              Padding="8">
        <StackPanel Spacing="8">
          <TextBlock Text="Changes"
                     FontWeight="SemiBold"
                     Foreground="{StaticResource TextPrimaryBrush}" />

          <ListBox ItemsSource="{Binding Changes}"
                   SelectedItem="{Binding SelectedChange, Mode=TwoWay}">
            <ListBox.ItemTemplate>
              <DataTemplate x:DataType="vm:FileChangeViewModel">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <Border Background="{StaticResource Surface2Brush}"
                            CornerRadius="6"
                            Padding="8,4">
                      <TextBlock Text="{Binding Kind}"
                                 Foreground="{StaticResource TextSecondaryBrush}" />
                    </Border>
                    <StackPanel Spacing="4">
                      <TextBlock Text="{Binding Path}"
                                 Foreground="{StaticResource TextPrimaryBrush}" />
                      <TextBlock Text="Staged"
                                 Foreground="{StaticResource AccentBrush}"
                                 FontSize="11"
                                 IsVisible="{Binding IsStaged}" />
                    </StackPanel>
                  </StackPanel>

                  <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
                    <Button Content="Stage"
                            Command="{Binding ((vm:MainWindowViewModel)DataContext).StageChangeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            IsVisible="{Binding IsStaged, Converter={StaticResource BooleanNegationConverter}}" />
                    <Button Content="Unstage"
                            Command="{Binding ((vm:MainWindowViewModel)DataContext).UnstageChangeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            IsVisible="{Binding IsStaged}" />
                  </StackPanel>
                </Grid>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </StackPanel>
      </Border>

      <!-- Right: Diff + commit area -->
      <Grid Grid.Column="1" RowDefinitions="*,Auto" RowSpacing="10">
        <!-- Diff panel -->
        <Border Background="{StaticResource Surface1Brush}"
                CornerRadius="{StaticResource PanelCornerRadius}"
                BorderBrush="{StaticResource OutlineSubtleBrush}"
                BorderThickness="1"
                Padding="8">
          <Grid>
            <ScrollViewer>
              <TextBlock Text="{Binding DiffText}"
                         FontFamily="JetBrains Mono,Consolas,Menlo,Monaco"
                         FontSize="12"
                         Foreground="{StaticResource TextPrimaryBrush}"
                         TextWrapping="NoWrap" />
            </ScrollViewer>

            <StackPanel Spacing="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsVisible="{Binding HasSelection, Converter={StaticResource BooleanNegationConverter}}">
              <TextBlock Text="Select a change to view its diff"
                         Foreground="{StaticResource TextSecondaryBrush}" />
              <TextBlock Text="Use stage controls to switch between staged and unstaged views"
                         Foreground="{StaticResource TextMutedBrush}"
                         FontSize="11" />
            </StackPanel>
          </Grid>
        </Border>

        <!-- Commit panel -->
        <Border Grid.Row="1"
                Background="{StaticResource Surface1Brush}"
                CornerRadius="{StaticResource PanelCornerRadius}"
                BorderBrush="{StaticResource OutlineSubtleBrush}"
                BorderThickness="1"
                Padding="8">
          <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,2">
              <TextBlock Text="Commit message"
                         Foreground="{StaticResource TextSecondaryBrush}" />
              <Button Grid.Column="1"
                      Content="Commit"
                      Command="{Binding CommitCommand}" />
            </Grid>
            <TextBox Grid.Row="1"
                     AcceptsReturn="True"
                     Height="80"
                     Text="{Binding CommitMessage, Mode=TwoWay}" />
          </Grid>
        </Border>
      </Grid>
    </Grid>
  </Grid>
</Window>
